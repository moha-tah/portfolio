{
  "extends": ["//"],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_URL",
    "VERCEL_ENV",
    "NEXT_PUBLIC_FRONT_URL",
    "NEXT_PUBLIC_BACK_URL",
    "NEXT_PUBLIC_TURNSTILE_SITE_KEY"
  ],
  "tasks": {
    "build": {
      "env": [
        "NODE_ENV",
        "VERCEL_ENV",
        "VERCEL_URL",
        "NEXT_PUBLIC_FRONT_URL",
        "NEXT_PUBLIC_BACK_URL",
        "NEXT_PUBLIC_TURNSTILE_SITE_KEY"
      ],
      "dependsOn": ["^build", "api:generate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "with": ["api:watch", "utils#dev"],
      "cache": false,
      "persistent": true
    },

    "lint": {
      "outputs": ["next-env.d.ts"]
    },
    "lint:fix": {
      "outputs": ["next-env.d.ts"]
    },
    "typecheck": {
      "dependsOn": ["api:generate"]
    },

    "api:generate": {
      "dependsOn": ["back#swagger:generate"],
      "outputs": ["src/lib/api/schema.d.ts"]
    },
    "api:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
