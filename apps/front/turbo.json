{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "with": ["api:watch"],
      "cache": false,
      "persistent": true
    },

    "lint": {
      "outputs": ["next-env.d.ts"]
    },
    "lint:fix": {
      "outputs": ["next-env.d.ts"]
    },
    "typecheck": {},

    "api:generate": {
      "outputs": ["src/lib/api/schema.d.ts"]
    },
    "api:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
