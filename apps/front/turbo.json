{
  "extends": ["//"],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_URL",
    "VERCEL_ENV",
    "NEXT_PUBLIC_FRONT_URL",
    "NEXT_PUBLIC_BACK_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "api:generate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "with": ["api:watch"],
      "cache": false,
      "persistent": true
    },

    "lint": {
      "outputs": ["next-env.d.ts"]
    },
    "lint:fix": {
      "outputs": ["next-env.d.ts"]
    },
    "typecheck": {},

    "api:generate": {
      "outputs": ["src/lib/api/schema.d.ts"]
    },
    "api:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
