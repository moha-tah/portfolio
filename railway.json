{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npx turbo run build --filter=back"
  },
  "deploy": {
    "preDeployCommand": [
      "npx turbo run db:generate",
      "npx turbo run db:migrate:deploy"
    ],
    "startCommand": "pnpm --filter=back run start"
  }
}
