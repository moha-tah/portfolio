{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_URL",
    "VERCEL_ENV",
    "NEXT_PUBLIC_FRONT_URL",
    "NEXT_PUBLIC_BACK_URL",
    "SEND_WEBHOOKS",
    "SEND_EMAILS",
    "DISCORD_WEBHOOK_URL",
    "RESEND_API_KEY"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "translate": {
      "dependsOn": ["^build"],
      "outputs": ["apps/front/messages/*.json", "apps/front/i18n.lock"]
    }
  }
}
